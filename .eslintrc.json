{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:vue/vue3-essential", "prettier"],
    "overrides": [
        {
            "files": ["src/views/**/index.vue"],
            "rules": {
                "vue/multi-word-component-names": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["vue"],
    "rules": {
        "indent": ["error", 4]
    }
}
